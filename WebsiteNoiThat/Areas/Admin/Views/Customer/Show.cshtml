@model IEnumerable<WebsiteDungCuHocTap.Models.UserModelView>

@{

    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<h2>Danh sách khách hàng</h2>
<hr />
<p>
    <a href="@Url.Action("Add", "Customer")" class="btn btn-primary" style="margin-top:10px;margin-bottom:10px;">Thêm khách hàng</a>
</p>
<!-- DataTales Example -->
<div class="card shadow mb-4">
    <div class="card-body">
        <div class="table-responsive">
            <table id="example" class="table table-striped table-bordered table-hover" style="width:100%">
                <thead>
                    <tr>
                        <th>Mã khách hàng</th>
                        <th>Họ tên</th>
                        <th>Địa chỉ</th>
                        <th>Số điện thoại</th>
                        <th>Tên đăng nhập</th>
                        <th>Mật khẩu</th>
                        <th>Email</th>
                        <th>Quyền</th>
                        <th>Trạng thái</th>

                        <th>Số điểm tích</th>
                        @*<th>Chứng minh thư</th>*@
                        <th>Hành động</th>
                    </tr>
                </thead>

                <tbody>

                    @foreach (var item in Model)
                    {
                        <tr class="Search">
                            <td> @item.UserId</td>
                            <td> @item.Name</td>
                            <td>@item.Address</td>
                            <td>0 @item.Phone</td>
                            <td>@item.Username</td>
                            <td>******</td>
                            <td>@item.Email</td>
                            <td>@item.GroupId</td>
                            <td>@item.Status</td>
                            <td>@item.NumberCard</td>
                            @*<td>@item.Indentification</td>*@
                            <td width="120px;">
                                <a href="@Url.Action("Edit", "Customer", new { area = "Admin", UserId = item.UserId })" class="btn btn-sm btn-primary">Sửa</a>
                                |
                                @using (Html.BeginForm("Delete", "Customer", FormMethod.Post, new { area = "Admin" }))
                                {
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="UserId" value="@item.UserId" />
                                    <button type="submit" class="btn btn-sm btn-danger">Xóa</button>
                                }
                            </td>
                            @*                            <td width="120px;">
            <input type="button" class="btn btn-sm btn-primary" value="Sửa" onclick="location.href='/Admin/Customer/Edit?UserId=@item.UserId'" /> |
            <input type="button" class="btn btn-sm btn-danger" value="Xóa" onclick="location.href='/Admin/Customer/Delete?UserId=@item.UserId'" />
        </td>*@


                        </tr>
                    }

                </tbody>
               
            </table>

        </div>
        <script src="~/Scripts/jquery-3.3.1.js"></script>
        <script src="~/Scripts/bootstrap.min.js"></script>
        <script src="~/Content/DataTable/js/jquery.dataTables.min.js"></script>
        <script src="~/Content/DataTable/js/dataTables.bootstrap.min.js"></script>

        <script type="text/javascript">

            $('#example').DataTable();
        </script>
        <script src="~/Scripts/jquery-3.3.1.min.js"></script>



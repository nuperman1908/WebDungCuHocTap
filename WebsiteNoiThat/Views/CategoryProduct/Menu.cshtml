@model List<Models.EF.Category>


<div class="dropdown-menu" aria-labelledby="dropdown_category">
    @foreach (var item in Model.Where(n => n.ParId == 0))
    {
        var child = Model.Where(n => n.ParId == item.CategoryId);
        var childparent = child.Count() > 0;
        <a class="dropdown-item" href="/danh-muc/@item.CategoryId" @childparent style="font-weight:normal">@item.Name</a>
    }

</div>

    <script type="text/javascript">
        $(document).ready(function () {
            var stt = 0;
            starimg = $("img.slider:first").attr("stt")
            endimg = $("img.slider:last").attr("stt")

            $("img.slider").each(function () {
                if ($(this).is(':visible'))
                    stt = $(this).attr("stt");
            });
            $("#next").click(function () {
                if (stt == endimg) {
                    stt = -1;
                }
                next = ++stt;
                $("img.slider").hide();
                $("img.slider").eq(next).show();
            });
            $("#prev").click(function () {
                if (stt == 0) {
                    stt = endimg;
                    prev = stt++;
                }
                prev = --stt;
                $("img.slider").hide();
                $("img.slider").eq(next).show();
            });
            setInterval(function () {
                $("#next").click()
            }, 2000);
        })
    </script>

